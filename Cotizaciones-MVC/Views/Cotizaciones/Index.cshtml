@model IEnumerable<Cotizacion>

@{
    ViewData["Title"] = "Cozaciones";
}


<!DOCTYPE html>
<html>
<head>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.9.1/font/bootstrap-icons.css">
</head>

<div class="text-center">
    <h1 class="display-4">Cotizaciones</h1>
</div>


<a asp-action="Crear" class="btn btn-primary mb-3">Nueva Cotización</a>

<table class="table">

    <thead>
        <tr>
            <th>Acciones</th>
            <th>Cotización</th>
            <th>Cliente</th>
            <th>Fecha</th>
            <th>Importe</th>
            <th>Status</th>
       
        </tr>

    </thead>

    <tbody>

        
          @foreach (var cotizacion in Model)
          {
                  <tr>
                      <td>
                    <a class="btn btn-primary" asp-action="Editar" asp-route-id="@cotizacion.id">Editar</a>


                    <a class="btn btn-danger" asp-action="Borrar" asp-route-id="@cotizacion.id">
                            <i class="bi bi-x-circle-fill"></i>Borrar

                    </a>
                    <a  class="btn btn-warning" target="_blank" asp-action="imprimirCotizacion" asp-route-id="@cotizacion.id">

                        <i class="bi bi-printer-fill"></i>
                        Imprimir

                    </a>
                      </td>
                      <td>
                    @cotizacion.id
                      </td>
                      <td>
                    @cotizacion.datos
                      </td>
                      <td>
                    @cotizacion.fecha
                      </td>

                <td>
                    @cotizacion.importe
                </td>
                <td>
                    @cotizacion.estado
                </td>

                  </tr>
          }
         

    </tbody>


</table>

</html>
